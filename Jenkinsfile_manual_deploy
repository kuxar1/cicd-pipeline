pipeline {
    parameters {
        choice(name: 'environment', choices: ['main', 'dev'], description: 'deploying environmanet')
    }
    // ${params.environment}
    agent any
    tools {
        nodejs "7.8.0"
    }
    
    stages {
        stage('Build') {
            steps {
                sh "npm install"
                }
            }
        stage('Test') {
            steps {
                sh "npm test"
                }
            }
        stage('Docker build') {
            when {
                expression {
                    BRANCH_NAME == ${params.environment}
                }
            }
            steps {
                echo '${params.environment}'
                //sh "docker build -t node${BRANCH_NAME}:v1.0 ."        
                }
            }
        stage('Deploy') {
            when {
                expression {
                    BRANCH_NAME == ${params.environment}
                }
            }
            steps {
                echo '${params.environment}'
                // sh "docker compose down && docker compose up -d"        
                }
            }
    }
}